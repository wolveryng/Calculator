<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="370">

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Path=KeyPressedString}" VerticalAlignment="Bottom"
                   HorizontalAlignment="Right" FontWeight="Bold"/>
        <TextBlock Text="{Binding Path=Entered_Number}" VerticalAlignment="Bottom"
                   HorizontalAlignment="Right" FontSize="50" FontWeight="Bold"
                   Grid.Row="1"/>
        <Grid Grid.Row="2" Background="Gray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" Content="MC"/>
            <Button Grid.Column="3" Content="MR"/>
            <Button Grid.Column="5" Content="M+"/>
            <Button Grid.Column="7" Content="M-"/>
            <Button Grid.Column="9" Content="MS"/>
            <Button Grid.Column="11" Content="M"/>

        </Grid>
        <Grid Grid.Row="3" Background="Gray">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Grid.Row="1" Content="%"/>
            <Button Grid.Column="3" Grid.Row="1" Content="CE"/>
            <Button Grid.Column="5" Grid.Row="1" Content="C"/>
            <Button Grid.Column="7" Grid.Row="1" Content="DELETE"/>
            
            <Button Grid.Column="1" Grid.Row="3" Content="1/X"/>
            <Button Grid.Column="3" Grid.Row="3" Content="X^2"/>
            <Button Grid.Column="5" Grid.Row="3" Content="SQRT X"/>
            <Button Grid.Column="7" Grid.Row="3" Content="÷" FontSize="20"/>

            <Button Grid.Column="1" Grid.Row="5" Content="7"/>
            <Button Grid.Column="3" Grid.Row="5" Content="8"/>
            <Button Grid.Column="5" Grid.Row="5" Content="9"/>
            <Button Grid.Column="7" Grid.Row="5" Content="X"/>
            
            <Button Grid.Column="1" Grid.Row="7" Content="4"/>
            <Button Grid.Column="3" Grid.Row="7" Content="5"/>
            <Button Grid.Column="5" Grid.Row="7" Content="6"/>
            <Button Grid.Column="7" Grid.Row="7" Content="-"/>
            
            <Button Grid.Column="1" Grid.Row="9" Content="1"/>
            <Button Grid.Column="3" Grid.Row="9" Content="2"/>
            <Button Grid.Column="5" Grid.Row="9" Content="3"/>
            <Button Grid.Column="7" Grid.Row="9" Content="+"/>
            
            <Button Grid.Column="1" Grid.Row="11" Content="+/-"/>
            <Button Grid.Column="3" Grid.Row="11" Content="0"/>
            <Button Grid.Column="5" Grid.Row="11" Content=","/>
            <Button Grid.Column="7" Grid.Row="11" Content="="/>
            
            
        </Grid>

    </Grid>
</Window>
